extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content
    form(action="/admin/kullaniciduzenle" method="POST")
 
        input(type="hidden" name="id" value=`${user._id}`)

        .form-group.row
            label(for="username").col-sm-2.col-form-label Username
            .col-sm-10
                input.form-control#username(type="text" name="username"  value=`${user.username}`)
        
        .form-group.row
            label(for="password").col-sm-2.col-form-label Password
            .col-sm-10
                input.form-control#password(type="text" name="password"  value=`${user.password}`)  

        .form-group.row
            label(for="email").col-sm-2.col-form-label Email
            .col-sm-10
                input.form-control#email(type="text" name="email"  value=`${user.email}`)
                 
        .form-group.row
            label(for="auth").col-sm-2.col-form-label Auth
            .col-sm-10
                input.form-control#auth(type="text" name="auth"  value=`${user.auth}`)

        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Save User").btn.btn-primary   
           
